# AI Provider (OpenAI-compatible endpoint — works with OpenRouter, Ollama, LM Studio, etc.)
AI_BASE_URL=https://openrouter.ai/api/v1
AI_API_KEY=sk-or-your_api_key

# SQLite database path (Prisma)
DATABASE_URL="file:./zola.db"

# Encryption key for stored API keys (32+ hex chars)
ENCRYPTION_KEY=your_32_character_hex_encryption_key

# CSRF Protection (required)
CSRF_SECRET=your_32_character_random_string

# Ollama Configuration (for local AI models)
OLLAMA_BASE_URL=http://localhost:11434

# Local LangGraph agent server (optional — only needed for "test-agent" model)
# Set this to your FastAPI agent server; AI_BASE_URL is still used for all other models
AGENT_BASE_URL=http://localhost:8000/v1

# Developer Tools (optional)
EXA_API_KEY=your_exa_api_key

# Development Tools (optional)
ANALYZE=false
